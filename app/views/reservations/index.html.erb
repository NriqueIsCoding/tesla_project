<p id="notice"><%= notice %></p>

<h1>Reservations Offers</h1>

<table class="table table-sm-responsive">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Reservation number</th>
      <th>Delivery Date</th>
      <th>Asking Price</th>
      <th>Details</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.order('price DESC').each do |reservation| %>
      <tr>
        <td><%= reservation.user.name %></td>
        <td><%= reservation.resnum %></td>
        <td><%= reservation.deliverydate %></td>
        <td><%= number_to_currency(reservation.price) %></td>
        <td><%= reservation.comment %></td>
        
        <!-- <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>


