

<div class="d-flex flex-column justify-content-center">
	<div class='h2. bootstrap heading'>
		<h2>Log In</h2>
	</div>
	<div class="form-group ">
		<%= form_tag '/login' do %>
				<%= text_field_tag :email, nil, placeholder: 'Email', class: 'form-control w-25'%>

			<div class="form-group">
			 <%= label_tag(:password, "Password", class: 'col-form-label') %>
			 <%= password_field_tag :password , nil, placeholder: 'Password', class: 'form-control w-25 mt-1'%>
		 		</div>
			<div>
			<%= submit_tag "Log in" ,class: 'form-group btn btn-danger btn-lg text-white'%>
		</div>
	<%end%>
	</div>

</div>
